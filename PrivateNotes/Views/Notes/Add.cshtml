@model PrivateNotes.Models.Note
@{
    ViewData["Title"] = "Создание заметок";
}
<form asp-action="add" asp-controller="notes">
    <div>
        <div class="form-group">
            <label asp-for="Text" class="control-label">Имя</label>
            <textarea type="text" asp-for="Text" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Отправить" class="btn btn-default" />
        </div>
    </div>
</form>
