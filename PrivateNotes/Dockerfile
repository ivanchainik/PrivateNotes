#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:3.1-alpine3.14 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:3.1-alpine3.14 AS build
WORKDIR /src
COPY ["PrivateNotes/PrivateNotes.csproj", "PrivateNotes/"]
RUN dotnet restore "PrivateNotes/PrivateNotes.csproj"
COPY . .
WORKDIR "/src/PrivateNotes"
RUN dotnet build "PrivateNotes.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "PrivateNotes.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "PrivateNotes.dll"]